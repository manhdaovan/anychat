<% if @user.errors.blank? %>
var successMsg = 'Update user info success!';
<% if @email_changed %>
successMsg += ' Confirmation email will be sent to you soon.';
<% end %>
toastr.info(successMsg);
$('#current-user-profile-modal').modal('hide');
<% else %>
var errorMsg = '';
<% @user.errors.full_messages.each do |msg| %>
errorMsg += '<%= msg %>\n';
<% end %>
toastr.error(errorMsg);
<% end %>